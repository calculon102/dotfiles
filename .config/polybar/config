[colors]
background = #60000000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

; Rainbow-colors
rb1 = #ff0000
rb2 = #ffa500
rb3 = #ffff00
rb4 = #008000
rb5 = #0000ff
rb6 = #4b0082
rb7 = #ee82ee

[bar/zeus]
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = #ff0000

cursor-click = pointer
cursor-scroll = ns-resize

padding = 0
padding-left = 0
padding-right = 0

fixed-center = false

font-0 = "Fantasque Sans Mono:style=Regular:size=13;1"
font-1 = "Noto Sans:style=Bold:size=18;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=11;1" 
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1" 
font-4 = "Font Awesome 5 Brands:pixelsize=11;1"

height = 25

line-size = 0
line-color = #f00

locale = de_DE.UTF-8

module-margin-left = 0
module-margin-right = 1

radius = 10.0

offset-x = 0.5%
offset-y = 6

tray-position = none

wm-restack = bspwm

[bar/mon1-left]
inherit = bar/zeus
modules-left = bspwm 
monitor = DisplayPort-0
width = 11.1%

[bar/mon1-center]
inherit = bar/zeus
modules-center = xwindow 
monitor = DisplayPort-0
width = 36%
offset-x = 32.0%

[bar/mon1-right]
inherit = bar/zeus
modules-left = spotify
modules-right = pulseaudio 
monitor = DisplayPort-0
width = 20%
offset-x = 79.5%

[bar/mon2-left]
inherit = bar/zeus
modules-left = bspwm 
monitor = HDMI-A-0 
width = 7.0%

[bar/mon2-center]
inherit = bar/zeus
modules-center = xwindow 
monitor = HDMI-A-0 
width = 36%
offset-x = 32.0%

[bar/mon2-right]
inherit = bar/zeus
modules-right = memory cpu eth-down eth-up updates date 
monitor = HDMI-A-0 
width = 30%
offset-x = 69.5%

[module/bspwm]
type = internal/bspwm

label-focused = %icon%
;label-focused-background = ${colors.background-alt}
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
;label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

ws-icon-0 = 1;www
ws-icon-1 = 2;mail
ws-icon-2 = 3;game
ws-icon-3 = 4;music
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8

[module/xwindow]
type = internal/xwindow

format-foreground = ${colors.foreground}

label = %title%
label-maxlen = 100

[module/spotify]
type = custom/script
interval = 10
format-prefix = " "
format-prefix-foreground = #1db954
format = <label>
exec = spotify-status -f '{artist}: {song}'


[module/filesystem]
type = internal/fs
interval = 60

format-mounted-underline = ${colors.rb1}

label-mounted = %{F#555}%mountpoint%%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

mount-0 = /
mount-1 = /home

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.rb2}
;format-underline = ${colors.rb2}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.rb2}
# format-underline = ${colors.rb2}
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

# format-connected-underline = ${colors.rb3}
format-connected-prefix-foreground = ${colors.rb3}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/eth-down]
inherit = module/eth

label-connected = " %downspeed:3% "
format-connected = <label-connected>
format-connected-prefix = "  "

[module/eth-up]
inherit = module/eth

label-connected = " %upspeed:3% "
format-connected = <label-connected>
format-connected-prefix = "  "

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/updates]
type = custom/script
exec = query-updates
format-prefix = " "
format-prefix-foreground = ${colors.rb4}
;format-underline = ${colors.rb4}
interval = 3600

[module/weather]
type = custom/script
exec = query-weather
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.rb5}
interval = 3600

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume> 
;format-volume-underline = ${colors.rb6}

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = #666

ramp-volume-0 =  
ramp-volume-1 = 
ramp-volume-2 = 

[module/date]
type = internal/date
interval = 5

date = "KW %V | %a. %d.%m.%Y"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.rb7}

label = " %date% |  %time% "
label-foreground = ${colors.background}
label-background = ${colors.foreground}

[settings]
compositing-background = screen
